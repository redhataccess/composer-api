{
  "name": "redhataccess/composer-api",
  "description": "Pack of functions for interfacing with composer",
  "license": "MIT",
  "authors": [
    {
      "name": "Anton Mikhailov",
      "email": "issues.bookin@gmail.com"
    },
    {
      "name": "Alex McCabe",
      "email": "alex@alexdmccabe.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "bookin\\composer\\api\\": ""
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "replace": {
    "bookin/composer-api": "*"
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "composer/composer": "^2.0"
  },
  "require-dev": {
    "drupal/coder": "^8.3"
  }
}
